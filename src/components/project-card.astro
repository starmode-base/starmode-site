---
import type { Project } from "../data/projects";

interface Props {
  project: Project;
}

const { project } = Astro.props;

// Apps use semibold title, libraries/templates use mono
const titleClass = project.type === "app" ? "token-title" : "token-title-mono";

// Site link label varies by type
const siteLinkLabel = project.type === "template" ? "Demo" : "Visit";
---

<div class="group flex justify-between">
  <div class="flex-1">
    <div class="mb-1 flex items-center gap-3">
      <h4 class={titleClass}>
        {project.displayName}
      </h4>
      {
        project.status && (
          <>
            {/* <span class="rounded border border-slate-200 px-2 py-0.5 text-xs tracking-wide text-slate-400 uppercase">
              {project.status}
            </span> */}
            {/* <span class="status-pill-1 rounded px-2 py-0.5 text-xs tracking-wide text-slate-500 uppercase">
              {project.status}
            </span>
            <span class="status-pill-2 rounded px-2 py-0.5 text-xs tracking-wide uppercase">
              {project.status}
            </span> */}
            {/* <span class="status-pill-3 rounded px-2 py-0.5 text-xs tracking-wide uppercase">
              {project.status}
            </span> */}
            <span class="status-pill-7 rounded px-2 py-0.5 text-xs tracking-wide uppercase">
              {project.status}
            </span>
            {/* <span class="status-pill-4 rounded px-2 py-0.5 text-xs tracking-wide uppercase">
              {project.status}
            </span>
            <span class="status-pill-5 rounded px-2 py-0.5 text-xs tracking-wide uppercase">
              {project.status}
            </span> */}
            {/* <span class="status-pill-6 rounded px-2 py-0.5 text-xs tracking-wide uppercase">
              {project.status}
            </span> */}
          </>
        )
      }
    </div>
    <p class="token-body">{project.description}</p>
  </div>
  <div class="token-body ml-4 flex gap-3">
    <a href={project.github} class="token-link">GitHub</a>
    {
      project.npm && (
        <a href={project.npm} class="token-link">
          npm
        </a>
      )
    }
    {
      project.site && (
        <a href={project.site} class="token-link">
          {siteLinkLabel}
        </a>
      )
    }
  </div>
</div>

<style>
  .status-pill-1 {
    box-shadow:
      -1px -0.5px 0 0 rgba(0, 255, 255, 0.5),
      1px 0.5px 0 0 rgba(255, 0, 255, 0.5),
      0 -1px 0 0 rgba(255, 255, 0, 0.4);
  }

  .status-pill-2 {
    color: white;
    text-shadow:
      -1px -0.5px 0 cyan,
      1px 0.5px 0 magenta;
  }

  .status-pill-3 {
    color: white;
    text-shadow:
      -1px -0.5px 0 cyan,
      1px 0.5px 0 magenta;
    box-shadow:
      -1px -0.5px 0 0 rgba(0, 255, 255, 0.5),
      1px 0.5px 0 0 rgba(255, 0, 255, 0.5),
      0 -1px 0 0 rgba(255, 255, 0, 0.4);
  }

  .status-pill-4 {
    color: white;
    text-shadow:
      -0.5px -0.25px 0 cyan,
      0.5px 0.25px 0 magenta;
    box-shadow:
      -0.5px -0.25px 0 0 rgba(0, 255, 255, 0.5),
      0.5px 0.25px 0 0 rgba(255, 0, 255, 0.5),
      0 -0.5px 0 0 rgba(255, 255, 0, 0.4);
  }

  .status-pill-5 {
    color: magenta;
    text-shadow: -1px -0.5px 0 cyan;
    box-shadow:
      -1px -0.5px 0 0 rgba(0, 255, 255, 0.6),
      1px 0.5px 0 0 rgba(255, 0, 255, 0.6);
  }

  .status-pill-6 {
    background: rgba(255, 0, 255, 0.05);
    color: white;
    text-shadow:
      -1px -0.5px 0 cyan,
      1px 0.5px 0 magenta;
    box-shadow:
      -1px -0.5px 0 0 rgba(0, 255, 255, 0.5),
      1px 0.5px 0 0 rgba(255, 0, 255, 0.5),
      0 -1px 0 0 rgba(255, 255, 0, 0.4);
  }

  .status-pill-7 {
    color: white;
    text-shadow:
      -1px -0.5px 0 cyan,
      1px 0.5px 0 magenta;
    box-shadow:
      -1px -0.5px 0 0 rgba(0, 255, 255, 0.5),
      1px 0.5px 0 0 rgba(255, 0, 255, 0.5),
      0 -1px 0 0 rgba(255, 255, 0, 0.4);
    transition: all 0.2s ease-out;
  }

  .status-pill-7:hover {
    color: rgb(148 163 184); /* slate-400 */
    text-shadow: none;
    box-shadow: inset 0 0 0 1px rgb(226 232 240); /* slate-200 */
  }
</style>
