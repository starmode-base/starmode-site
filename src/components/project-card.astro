---
import type { Project } from "../data/projects";

interface Props {
  project: Project;
}

const { project } = Astro.props;

// Apps use semibold title, libraries/templates use mono
const titleClass =
  project.type === "app"
    ? "text-base font-semibold text-stone-900"
    : "font-mono text-base text-stone-900";

// Site link label varies by type
const siteLinkLabel = project.type === "template" ? "Demo" : "Visit";
---

<div class="group flex justify-between">
  <div class="flex-1">
    <div class="mb-1 flex items-center gap-3">
      <h3 class={titleClass}>
        {project.displayName}
      </h3>
      {
        project.status && (
          <span class="rounded border border-amber-200 bg-amber-100 px-2 py-0.5 text-xs text-amber-700">
            {project.status}
          </span>
        )
      }
    </div>
    <p class="text-sm text-stone-600">{project.description}</p>
  </div>
  <div class="ml-4 flex gap-3 text-sm">
    <a
      href={project.github}
      class="hover:text-cerise text-stone-600 underline-offset-2 transition-colors hover:underline"
    >
      GitHub
    </a>
    {
      project.npm && (
        <a
          href={project.npm}
          class="hover:text-cerise text-stone-600 underline-offset-2 transition-colors hover:underline"
        >
          npm
        </a>
      )
    }
    {
      project.site && (
        <a
          href={project.site}
          class="hover:text-cerise text-stone-600 underline-offset-2 transition-colors hover:underline"
        >
          {siteLinkLabel}
        </a>
      )
    }
  </div>
</div>
