---
import "../styles/global.css";
import RainbowNotch from "../components/rainbow-notch.astro";
import ProjectCard from "../components/project-card.astro";
import { libraries, apps, templates } from "../data/projects";
---

<html lang="en" class="scroll-smooth">
  <head>
    <meta charset="utf-8" />
    <link rel="icon" type="image/svg+xml" href="/starmode-icon.svg" />
    <meta name="viewport" content="width=device-width" />
    <meta name="generator" content={Astro.generator} />
    <title>STΛR MODΞ — A quality-focused software collective</title>
    <meta
      name="description"
      content="A quality-focused software collective. We care deeply about first-class experiences for users, developers, and LLMs alike."
    />
  </head>
  <body class="font-display bg-stone-50 text-stone-900 antialiased">
    <!-- Rainbow Notch -->
    <RainbowNotch href="#inclusion" />

    <main>
      <!-- Hero -->
      <section
        class="mx-auto flex max-w-4xl flex-col items-center gap-4 px-6 py-16 sm:gap-8 sm:py-32"
      >
        <div class="px-10">
          <img
            src="/starmode-logo.svg"
            alt="STΛR MODΞ"
            class="h-auto w-full max-w-xl"
          />
        </div>
        <p class="text-center font-light text-stone-600 sm:text-xl">
          A quality-focused software collective
        </p>
      </section>

      <!-- Projects -->
      <section class="mx-auto flex max-w-4xl flex-col gap-16 px-6">
        <!-- Apps -->
        <div class="flex flex-col gap-10">
          <h2
            class="text-cerise border-b border-stone-200 pb-2 text-xs font-bold tracking-widest uppercase"
          >
            Apps
          </h2>
          {apps.map((project) => <ProjectCard project={project} />)}
        </div>

        <!-- Libraries -->
        <div class="flex flex-col gap-10">
          <h2
            class="text-cerise border-b border-stone-200 pb-2 text-xs font-bold tracking-widest uppercase"
          >
            Libraries
          </h2>
          {libraries.map((project) => <ProjectCard project={project} />)}
        </div>

        <!-- Templates -->
        <div class="flex flex-col gap-10">
          <h2
            class="text-cerise border-b border-stone-200 pb-2 text-xs font-bold tracking-widest uppercase"
          >
            Templates
          </h2>
          {templates.map((project) => <ProjectCard project={project} />)}
        </div>
      </section>

      <!-- Inclusion -->
      <section id="inclusion" class="mx-auto max-w-4xl px-6 py-28">
        <div class="flex flex-col items-start gap-6">
          <RainbowNotch variant="inline" />
          <div>
            <h2 class="mb-3 text-lg font-semibold text-stone-900">Inclusion</h2>
            <p class="max-w-2xl text-sm leading-relaxed text-stone-600">
              Everyone deserves to feel safe, respected, and welcome—everywhere,
              always. That means creating an environment where people can
              contribute openly, ask questions freely, and be themselves. It
              also means calling out discrimination and exclusionary
              behavior—silence isn't neutrality.
            </p>
          </div>
        </div>
      </section>

      <!-- Footer -->
      <footer class="bg-stone-100">
        <div
          class="mx-auto flex max-w-4xl flex-col items-center justify-between gap-6 px-6 py-12 text-sm text-stone-600 sm:flex-row"
        >
          <div class="flex items-center gap-6">
            <a
              href="https://discord.gg/pspADbEW"
              class="hover:text-cerise transition-colors"
            >
              Discord
            </a>
            <a
              href="https://github.com/starmode-base"
              class="hover:text-cerise transition-colors"
            >
              GitHub
            </a>
            <a
              href="https://bsky.app/profile/lirbank.com"
              class="hover:text-cerise transition-colors"
            >
              Bluesky
            </a>
            <a
              href="https://x.com/MikaelLirbank"
              class="hover:text-cerise transition-colors"
            >
              Twitter
            </a>
          </div>
          <p>© 2025 STΛR MODΞ</p>
        </div>
      </footer>
    </main>
  </body>
</html>
