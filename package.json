{
  "name": "starmode-site",
  "type": "module",
  "engines": {
    "node": "24.x"
  },
  "scripts": {
    "dev": "astro dev",
    "build": "prettier --check . && astro build",
    "preview": "astro preview",
    "astro": "astro",
    "format": "prettier --write .",
    "og": "npx @resvg/resvg-js-cli --fit-width 2400 public/lirbank-og.svg public/lirbank-og.png",
    "clean:soft": "rm -rf node_modules tsconfig.tsbuildinfo .astro dist && bun install",
    "clean:hard": "rm -rf node_modules tsconfig.tsbuildinfo .astro dist bun.lock && bun install"
  },
  "dependencies": {
    "@tailwindcss/vite": "^4.1.18",
    "astro": "^5.16.6",
    "tailwindcss": "^4.1.18"
  },
  "devDependencies": {
    "prettier": "^3.7.4",
    "prettier-plugin-astro": "^0.14.1",
    "prettier-plugin-tailwindcss": "^0.7.2",
    "typescript": "^5.9.3"
  }
}
